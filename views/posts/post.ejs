<link rel="stylesheet" href="/css/write.css">

<div class="container p-5 ">
    <img src="/images/defaultPost.jpg" alt="post image" class="postImage" width="400" height="400" />
    <div class="d-flex flex-column mt-2">
        <div class="d-flex mt-3 align-items-center">
            <p class="fs-2 w-100  text-center"><%= post.title %> </p>
        </div>
        <div class="row">
            <div class="col">Author: <a href="<%= `/user/profile/${post.user.id}` %> "><%= post.user.name %></a>  </div>
            <div class="col"><span class="float-end"> Date: <%= post.date.toString().slice(4,16) %> </span></div>
        </div>
        <div class="fs-4 w-100 desc mt-3">
            <%= post.content %> 
        </div>
        <% if (post.user.id == currentUser.id) { %>
         
        <div class="d-flex justify-content-end mt-3">
            <a class="btn btn-primary btn-sm mx-1" role="button" href="/post/edit/<%= post.id %> ">Edit</a>
            <form action="/post/deletePost/<%= post.id %> " method="post">
        <button class="btn btn-danger btn-sm mx-1" type="submit">
            Delete
        </button>
        <% } %>

    </form>
    </div>
    </div>
</div>